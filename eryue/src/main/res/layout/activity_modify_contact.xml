<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:background="#ffffff"
        android:id="@+id/phone_con"
        android:layout_marginTop="10dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="#333333"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/phone"
            android:textColor="#999999"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dip"
            android:id="@+id/view" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:background="#ffffff"
        android:id="@+id/username_con">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="#333333"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_username"
            android:background="@null"
            android:hint="请输入用户名"
            android:textColorHint="#aaaaaa"
            android:textColor="#333333"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dip"
            android:layout_marginRight="16dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dip"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:background="#ffffff"
        android:id="@+id/wechat_con"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号"
            android:textColor="#333333"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_wechat"
            android:background="@null"
            android:hint="请输入微信号"
            android:textColorHint="#aaaaaa"
            android:textColor="#333333"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dip"
            android:layout_marginRight="16dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dip"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:background="#ffffff"
        android:id="@+id/qq_contain"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ号"
            android:textColor="#333333"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_qq"
            android:background="@null"
            android:hint="请输入QQ号"
            android:textColorHint="#aaaaaa"
            android:textColor="#333333"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dip"
            android:layout_marginRight="16dip"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:id="@+id/sure"
        android:layout_marginTop="40dip"
        android:background="@drawable/bg_red_textview"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:textSize="15dip"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:gravity="center"/>

</LinearLayout>