<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cell_background">

    <TextView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/close_dialog"
        android:text="X"
        android:visibility="invisible"
        android:textSize="30dip"
        android:gravity="center"
        android:textColor="@color/text_color_0"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dip"
        android:layout_marginRight="15dip"/>

    <ImageView
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:id="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invite_code"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_view"
        android:textColor="@color/red_lite"
        android:textSize="15dip"
        android:layout_marginTop="10dip"/>
    
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:id="@+id/line_view"
        android:layout_below="@+id/invite_code"
        android:layout_marginTop="20dip"
        android:background="@color/line_color"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_below="@id/line_view">
        <TextView
            android:layout_width="100dip"

            android:layout_height="match_parent"
            android:id="@+id/copy_text"
            android:text="复制邀请码"
            android:textSize="14dip"
            android:textColor="#040404"
            android:gravity="center"
            android:layout_toLeftOf="@+id/line1"
            android:layout_alignParentLeft="true"/>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:id="@+id/line1"
            android:background="@color/line_color"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="100dip"
            android:layout_height="match_parent"
            android:id="@+id/save_image"

            android:text="保存二维码"
            android:textSize="14dip"
            android:textColor="#040404"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/line1"
            />

    </RelativeLayout>

</RelativeLayout>