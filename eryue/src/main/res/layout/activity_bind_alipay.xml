<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:background="#ffffff"
        android:id="@+id/contain_2"
        android:layout_marginTop="10dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:id="@+id/contain_1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/input_alipay"
                android:background="@null"
                android:hint="请输入支付宝账号"
                android:textColorHint="#cccccc"
                android:textColor="#333333"
                android:gravity="left|center_vertical"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15dip"
                android:layout_marginLeft="16dip"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#e0e0e0"
            android:layout_below="@id/contain_1"
            android:id="@+id/line1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:id="@+id/contain_3"
            android:layout_below="@+id/line1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/name"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColorHint="#cccccc"
                android:textColor="#333333"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15dip"
                android:layout_marginLeft="16dip"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#e0e0e0"
            android:layout_below="@id/contain_3"
            android:id="@+id/line2"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:id="@+id/take_cash"
        android:layout_below="@id/contain_2"
        android:layout_marginTop="25dip"
        android:background="#ff5533"
        android:text="绑定"
        android:textSize="16dip"
        android:textColor="#ffffff"
        android:layout_marginRight="30dip"
        android:layout_marginLeft="30dip"
        android:gravity="center"
        />
</LinearLayout>