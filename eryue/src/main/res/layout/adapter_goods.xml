<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp">

    <LinearLayout android:id="@+id/layout_goods"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout android:id="@+id/layout_img_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/icon_goods"
                android:scaleType="fitXY"/>

            <ImageView android:id="@+id/iv_flag_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_video_player"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tabao"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/img_tb"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:text="--"
                android:textSize="@dimen/txtsize_name_goods"
                android:textColor="@color/txt_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_papertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="券后"
                android:textColor="@color/red"
                android:textSize="@dimen/txtsize_name_goods"/>

            <TextView
                android:id="@+id/tv_paperprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="¥74.9"
                android:textColor="@color/red"
                android:textSize="16dp"/>

            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/shape_paper_goods"
                android:padding="2dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:gravity="center_vertical"
                    android:text="券"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txtsize_name_goods"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    android:layout_marginLeft="-49dp"
                    android:layout_marginRight="-49dp"
                    android:background="@drawable/bg_dashline"/>

                <TextView
                    android:id="@+id/tv_price_paper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:gravity="center_vertical"
                    android:text="¥20"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txtsize_name_goods"/>

            </LinearLayout>


        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="4dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="已售"
                android:textColor="@color/txt_gray_light"
                android:textSize="@dimen/txtsize_name_goods"/>

            <TextView
                android:id="@+id/tv_sellnum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="129"
                android:textColor="@color/txt_gray_light"
                android:textSize="@dimen/txtsize_name_goods"/>

            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_shareapp"
                android:drawablePadding="2dp"
                android:background="@drawable/shape_bg_share"
                android:text="分享赚"
                android:textColor="@color/red"
                android:textSize="@dimen/txtsize_name_goods"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout android:id="@+id/layout_goods2"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="6dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout android:id="@+id/layout_img_goods2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_goods2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/icon_goods"
                android:scaleType="fitXY"/>

            <ImageView android:id="@+id/iv_flag_video2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_video_player"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tabao2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/img_tb"/>

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:text="--"
                android:textSize="@dimen/txtsize_name_goods"
                android:textColor="@color/txt_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_papertype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="券后"
                android:textColor="@color/red"
                android:textSize="@dimen/txtsize_name_goods"/>

            <TextView
                android:id="@+id/tv_paperprice2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="¥74.9"
                android:textColor="@color/red"
                android:textSize="16dp"/>

            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/shape_paper_goods"
                android:padding="2dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:gravity="center_vertical"
                    android:text="券"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txtsize_name_goods"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-49dp"
                    android:layout_marginRight="-49dp"
                    android:layerType="software"
                    android:background="@drawable/bg_dashline"/>

                <TextView
                    android:id="@+id/tv_price_paper2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:gravity="center_vertical"
                    android:text="¥20"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txtsize_name_goods"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="4dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="已售"
                android:textColor="@color/txt_gray_light"
                android:textSize="@dimen/txtsize_name_goods"/>

            <TextView
                android:id="@+id/tv_sellnum2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="129"
                android:textColor="@color/txt_gray_light"
                android:textSize="@dimen/txtsize_name_goods"/>

            <View android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_share2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_shareapp"
                android:drawablePadding="2dp"
                android:background="@drawable/shape_bg_share"
                android:text="分享赚"
                android:textColor="@color/red"
                android:textSize="@dimen/txtsize_name_goods"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>