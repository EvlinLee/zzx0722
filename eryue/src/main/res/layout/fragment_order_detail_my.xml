<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:id="@+id/headerview"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/already_paid_my"
                android:layout_width="match_parent"
                android:layout_height="39dip"
                android:gravity="center"
                android:text="已付款"
                android:textColor="#ff5533"
                android:textSize="15dip"/>

            <View
                android:id="@+id/line1_my"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#ff5533"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invalid_my"
                android:layout_width="match_parent"
                android:layout_height="39dip"
                android:gravity="center"
                android:text="已失效"
                android:textColor="#666666" />

            <View
                android:id="@+id/line2_my"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#ff5533"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

    <com.library.ui.dragrefresh.DragRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_my"></com.library.ui.dragrefresh.DragRefreshListView>

</LinearLayout>