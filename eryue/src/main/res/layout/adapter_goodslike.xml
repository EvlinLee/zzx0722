<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="120dp"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/iv_goodslike"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_like"
        android:scaleType="fitXY"/>

    <TextView android:id="@+id/tv_name_goodslike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="全套基础视频教程"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="券后"
            android:textColor="@color/red"
            android:textSize="12dp"/>

        <TextView android:id="@+id/tv_after_goodslike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:text="¥3.6"
            android:textColor="@color/red"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>