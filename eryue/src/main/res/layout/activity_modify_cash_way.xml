<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_list_shape"
        android:layout_margin="16dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:id="@+id/wechat_con">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝账号"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dip"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/input_alipay"
                android:background="@null"
                android:hint="请输入新支付宝账号"
                android:textColorHint="#aaaaaa"
                android:textColor="#333333"
                android:gravity="right|center_vertical"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="14sp"
                android:layout_marginRight="14dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_color"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="13dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:id="@+id/qq_contain">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝姓名"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:paddingLeft="15dip"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/input_alipay_name"
                android:background="@null"
                android:hint="请输入新支付宝姓名"
                android:textColorHint="#aaaaaa"
                android:textColor="#333333"
                android:gravity="right|center_vertical"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="14sp"
                android:layout_marginRight="14dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_color"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="13dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:id="@+id/phone_con">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="#333333"
                android:textSize="14sp"
                android:id="@+id/phone"
                android:layout_centerVertical="true"
                android:paddingLeft="14dp"/>

            <TextView
                android:layout_width="110dip"
                android:layout_height="30dip"
                android:id="@+id/get_code"
                android:text="获取验证码"
                android:textColor="#fd5d68"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginRight="14dp"
                android:background="@drawable/corner4_1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/line_color"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="13dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:id="@+id/contain_2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:paddingLeft="14dp"/>

            <EditText
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:hint="请输入短信验证码"
                android:textColorHint="#cccccc"
                android:gravity="right|center_vertical"
                android:textColor="#333333"
                android:inputType="number"
                android:maxLines="1"
                android:layout_marginRight="14dp"
                android:textSize="14sp"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:id="@+id/sure"
        android:layout_marginTop="30dip"
        android:background="@drawable/img_zhtx_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:gravity="center"/>

</LinearLayout>