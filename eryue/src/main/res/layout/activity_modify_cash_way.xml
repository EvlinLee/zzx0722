<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:background="#ffffff"
        android:id="@+id/phone_con">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="#333333"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/phone"
            android:textColor="#999999"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            android:paddingLeft="15dip"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:id="@+id/contain_2"
        android:background="#ffffff">
        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="100dip"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColorHint="#cccccc"
            android:textColor="#333333"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="16dip"
            />
        <TextView
            android:layout_width="110dip"
            android:layout_height="30dip"
            android:id="@+id/get_code"
            android:text="获取验证码"
            android:textColor="#ff4c4c"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="15dip"
            android:background="@drawable/corner4_1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dip"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:background="#ffffff"
        android:id="@+id/wechat_con">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝账号"
            android:textColor="#333333"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_alipay"
            android:background="@null"
            android:hint="请输入支付宝账号"
            android:textColorHint="#aaaaaa"
            android:textColor="#333333"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dip"
            android:layout_marginRight="16dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dip"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dip"
        android:background="#ffffff"
        android:id="@+id/qq_contain">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝姓名"
            android:textColor="#333333"
            android:textSize="15dip"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_alipay_name"
            android:background="@null"
            android:hint="请输入支付宝姓名"
            android:textColorHint="#aaaaaa"
            android:textColor="#333333"
            android:gravity="right|center_vertical"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="15dip"
            android:layout_marginRight="16dip"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:id="@+id/sure"
        android:layout_marginTop="40dip"
        android:background="@drawable/bg_red_textview"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:textSize="15dip"
        android:text="确认修改"
        android:textColor="#ffffff"
        android:gravity="center"/>

</LinearLayout>