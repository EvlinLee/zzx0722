<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:calendarview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="#ff1a40">
        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/image_view"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:background="@drawable/img_default_contract"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/image_view"
            android:layout_marginTop="21dip"
            android:layout_marginLeft="11dip"
            android:textColor="#ffffff"
            android:textSize="17dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num"
            android:layout_toRightOf="@+id/image_view"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="11dip"
            android:textColor="#ffffff"
            android:textSize="14dip"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hint_value"
        android:minHeight="90dip"
        android:padding="15dip"
        android:textSize="14dip"
        android:textColor="#aaaaaa"
        android:background="#ffffff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hint"
            android:textColor="#333333"
            android:textSize="14dip"
            android:layout_marginLeft="16dip"
            android:text="签到表"
            android:layout_marginTop="20dip"/>

        <com.othershe.calendarview.weiget.WeekView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/week"
            android:layout_below="@+id/hint"
            android:layout_marginTop="10dip"
            calendarview:week_color="#333333"
            calendarview:week_size="16"
            />

        <com.othershe.calendarview.weiget.CalendarView
            android:id="@+id/calendar"
            android:layout_below="@+id/week"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            calendarview:choose_type="multi"
            calendarview:show_holiday="false"
            calendarview:show_lunar="false"
            calendarview:show_term="false"
            calendarview:choose_color="#ffffff"
            calendarview:day_bg="@drawable/bg_date"
            calendarview:solar_color="#333333"
            calendarview:solar_size="16"
            calendarview:switch_choose="true" />

    </RelativeLayout>


</LinearLayout>