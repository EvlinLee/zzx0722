<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/comm_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contain_0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请绑定手机号"
            android:id="@+id/hint"
            android:textColor="#333333"
            android:textSize="24sp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/contain_1"
        android:layout_below="@+id/contain_0"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dip">

        <EditText
            android:id="@+id/phone"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dip"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColorHint="#cccccc"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_delete"
            android:visibility="invisible"
            android:background="@drawable/login_icon2"
            android:textColor="#666666"

             />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_below="@id/phone"
            />
        <EditText
            android:id="@+id/code"
            android:layout_width="180dp"
            android:layout_height="40dip"
            android:layout_marginLeft="15dip"
            android:background="@null"
            android:hint="输入短信验证码"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="13sp"
            android:textColorHint="#cccccc"
            android:textColor="#333333"
            android:layout_below="@+id/phone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:id="@+id/second_hint"
            android:text="获取验证码"
            android:layout_below="@+id/phone"
            android:background="@drawable/verify_code_button_shape"
            android:textColor="#fd5d68"
            android:textSize="14sp"
             />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_below="@id/code"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_step"
        android:text="下一步"
        android:textColor="#ffffff"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contain_1"
        android:layout_marginTop="90dip"/>

</RelativeLayout>